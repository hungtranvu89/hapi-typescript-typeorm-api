{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "alwaysStrict": true,
    "checkJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ES2015",
    "skipLibCheck": true,
    "pretty": true,
    "rootDir": "./src",
    "sourceMap": true,
    "outDir": "./build"
  },
  "include": [
    "src/**/*.ts",
    "typings/index.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}